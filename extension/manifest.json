{
  "manifest_version": 3,
  "name": "CyberAware Human Firewall",
  "version": "0.1.0",
  "description": "One-click phishing reporting with instant feedback.",
  "action": {
    "default_title": "Report Phish",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs", "alarms", "notifications"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/blocklist-guard.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*",
        "https://outlook.live.com/*"
      ],
      "js": ["dist/content/webmail-scrapers.js"],
      "run_at": "document_idle"
    }
  ]
}
